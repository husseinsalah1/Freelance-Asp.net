
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="/Content/myStyle/admin-stylee.css">
    <link rel="stylesheet" href="/Content/myStyle/footer.css">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="padding-bottom: 0px">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="/User/Edit/@Session["Id"]">
                            <i style="color: white; padding: 2px 3px;" class="fas fa-user"></i>
                            Profile
                        </a>
                    </li>
                    <li>
                        <a href="/Admin/ShowUsers">
                            <i style="color: white; padding: 2px 3px;" class="fas fa-users"></i>
                            Users
                        </a>
                    </li>
                    <li>
                        <a href="/Admin/Posts">
                            <i style="color: white; padding: 2px 3px;" class="fas fa-book-reader"></i>
                            Posts
                        </a>
                    </li>
                    <li>
                        <a href="/Admin/Requests">
                            <i style="color: white; padding: 2px 3px;" class="fas fa-paper-plane"></i>
                            Requests
                        </a>
                    </li>
                    <li>
                        <a href="/Admin/ReceivedProposal/@Session["Id"]">
                            <i style="color: white; padding: 2px 3px;" class="fas fa-paper-plane"></i>
                            Received
                        </a>
                    </li>


                </ul>
                @Html.Partial("_LoginPartial")

            </div>
        </div>
    </div>
    <div class="container body-content" style=" min-height: calc(77vh - 60px)">
        <div class="admin-pages">
            @RenderBody()
        </div>
    </div>

    <div class="footer" style="position: static; margin-top: 50px; ">
        @Html.Partial("_Footer")
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

